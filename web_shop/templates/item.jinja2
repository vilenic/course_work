{% extends '_base.jinja2' %}

{% block content %}

  <div class="col-sm" style="margin-top: 30px;">
      <p><h3>{{ item.manufacturer }}</h3></p>
      <p>Model: {{ item.name }}</p>
      <p><img src="{{ MEDIA_URL }}{{ item.photo }}"/></p>
      <p>{{ item.description }}</p>
      <p><b>{{ item.price }} Ñ€.</b></p>
      <form action="{{ item.pk }}" method="post">
        <input type="hidden" name="pk" value="{{ item.pk }}"/>
        {% csrf_token %}
        <button class="btn btn-primary" type="submit">Add to cart</button>
      </form>


  </div>

{% endblock %}
